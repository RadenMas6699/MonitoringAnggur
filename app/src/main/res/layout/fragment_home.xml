<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ECD39"
    tools:context=".ui.main.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradasi">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Malam"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_malam" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTime"
                android:layout_marginTop="4dp"
                android:text="Andriansyah Anwar"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:text="@string/home"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_anggur" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:lines="2"
                        android:paddingHorizontal="16dp"
                        android:text="@string/app_name"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="20dp"
                    android:background="@color/secondary_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_calender"
                        android:layout_marginTop="16dp" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="12dp"
                        android:gravity="end"
                        android:lines="2"
                        android:text="@string/date_and_time"
                        android:textColor="@color/dark_icon"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/img_clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="100dp" 
                        android:src="@drawable/ic_clock" />
                    <ImageView
                        android:id="@+id/img_date"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/img_clock"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_calendar1"/>

                    <TextView
                        android:id="@+id/value_clock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_date"
                        android:layout_alignTop="@+id/img_clock"
                        android:layout_alignBottom="@+id/img_clock"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/img_clock"
                        android:text="@string/dash"
                        android:textColor="@color/dark_icon"/>
                    <TextView
                        android:id="@+id/value_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_date"
                        android:layout_alignBottom="@+id/img_date"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/img_date"
                        android:text="@string/dash"
                        android:textColor="@color/dark_icon"/>
                        



                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/card_item"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        style="@style/icon_item"
                        android:src="@drawable/ic_temperature" />

                    <TextView
                        android:id="@+id/title_temperature"
                        style="@style/title_item"
                        android:text="@string/temperature" />

                    <TextView
                        android:id="@+id/value_temperature"
                        style="@style/value_item"
                        android:text="@string/dash" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_item"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        style="@style/icon_item"
                        android:src="@drawable/ic_humidity" />

                    <TextView
                        android:id="@+id/title_humidity"
                        style="@style/title_item"
                        android:text="@string/humidity" />

                    <TextView
                        android:id="@+id/value_humidity"
                        style="@style/value_item"
                        android:text="@string/dash" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/card_item"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        style="@style/icon_item"
                        android:padding="3dp"
                        android:src="@drawable/ic_kelembaban" />

                    <TextView
                        style="@style/title_item"
                        android:text="@string/soil" />

                    <TextView
                        style="@style/value_item"
                        android:text="@string/dash" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_item"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        style="@style/icon_item"
                        android:src="@drawable/ic_intensitas" />

                    <TextView
                        style="@style/title_item"
                        android:text="@string/light" />

                    <TextView
                        style="@style/value_item"
                        android:text="@string/dash" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/card_item"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        style="@style/icon_item"
                        android:padding="2dp"
                        android:src="@drawable/ic_air" />

                    <TextView
                        style="@style/title_item"
                        android:text="@string/water" />

                    <TextView
                        style="@style/value_item"
                        android:text="@string/dash" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_item"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        style="@style/icon_item"
                        android:padding="2dp"
                        android:src="@drawable/ic_pupuk" />

                    <TextView
                        style="@style/title_item"
                        android:text="@string/pupukk" />

                    <TextView
                        style="@style/value_item"
                        android:text="@string/dash" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>
