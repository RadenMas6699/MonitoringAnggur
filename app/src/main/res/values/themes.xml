<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MonitoringAnggur" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#679C43</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="Splash" parent="Theme.MonitoringAnggur">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="card_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="icon_item">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="title_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="value_item">
        <item name="android:background">@drawable/bg_value_green</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">65dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="status_item">
        <item name="background">@color/primary</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Circular">
        <item name="cornerSize" >50%</item>

    </style>

</resources>